# =============================================================================
# HIMALYTIX ERP - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and update with your actual values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# DJANGO CORE SETTINGS
# -----------------------------------------------------------------------------

# Django secret key - generate a new one for production
# Generate with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=django-insecure-CHANGE-THIS-IN-PRODUCTION

# Debug mode - MUST be False in production
DEBUG=True

# Allowed hosts - comma-separated list (e.g., localhost,127.0.0.1,yourdomain.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------

# Database engine: postgresql, mssql, sqlite3
DB_ENGINE=postgresql

# PostgreSQL (recommended for production)
DB_NAME=erpdb
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# SQL Server (alternative)
# DB_ENGINE=mssql
# DB_NAME=erptest1
# DB_USER=erpuser
# DB_PASSWORD=user@123
# DB_HOST=localhost
# DB_PORT=1433
# DB_DRIVER=ODBC Driver 17 for SQL Server
# DB_TRUSTED_CONNECTION=no

# SQLite (development only)
# DB_ENGINE=sqlite3
# DB_NAME=db.sqlite3

# -----------------------------------------------------------------------------
# CELERY / ASYNC TASK QUEUE
# -----------------------------------------------------------------------------

# Redis connection for Celery broker
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# -----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# -----------------------------------------------------------------------------

# Django Allauth - Social authentication (Google OAuth)
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret

# Session security
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False

# Set to True in production with HTTPS
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_SSL_REDIRECT=True

# -----------------------------------------------------------------------------
# EMAIL CONFIGURATION
# -----------------------------------------------------------------------------

EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# -----------------------------------------------------------------------------
# STATIC & MEDIA FILES
# -----------------------------------------------------------------------------

# Static files URL
STATIC_URL=/static/
STATIC_ROOT=collected_static_files/

# Media files (user uploads)
MEDIA_URL=/media/
MEDIA_ROOT=media/

# -----------------------------------------------------------------------------
# INTERNATIONALIZATION
# -----------------------------------------------------------------------------

# Default language code (en-us, ne)
LANGUAGE_CODE=en-us

# Timezone (UTC, Asia/Kathmandu)
TIME_ZONE=UTC

# -----------------------------------------------------------------------------
# LOGGING & MONITORING
# -----------------------------------------------------------------------------

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Structured logging format: json, console
LOG_FORMAT=console

# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# OpenTelemetry Distributed Tracing
OTEL_ENABLED=False
OTEL_SERVICE_NAME=himalytix-erp
OTEL_EXPORTER=jaeger
JAEGER_HOST=localhost
JAEGER_PORT=6831
# OTLP_ENDPOINT=http://localhost:4317

# -----------------------------------------------------------------------------
# CLOUD STORAGE (OPTIONAL)
# -----------------------------------------------------------------------------

# AWS S3 for static/media files
# USE_S3=False
# AWS_ACCESS_KEY_ID=your_aws_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# -----------------------------------------------------------------------------
# DEVELOPMENT / TESTING
# -----------------------------------------------------------------------------

# Enable Django Debug Toolbar
ENABLE_DEBUG_TOOLBAR=False

# Test database name (if different from main)
# TEST_DB_NAME=test_erpdb

# -----------------------------------------------------------------------------
# REPORTING
# -----------------------------------------------------------------------------

# Enable drag-and-drop custom report templates
ENABLE_CUSTOM_REPORTS=True

# -----------------------------------------------------------------------------
# THIRD-PARTY INTEGRATIONS
# -----------------------------------------------------------------------------

# Stripe for payments (if applicable)
# STRIPE_PUBLIC_KEY=pk_test_xxxxx
# STRIPE_SECRET_KEY=sk_test_xxxxx

# Twilio for SMS (if applicable)
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# -----------------------------------------------------------------------------
# MULTI-TENANCY
# -----------------------------------------------------------------------------

# Default tenant schema
DEFAULT_TENANT_SCHEMA=public

# Enable tenant isolation
ENABLE_TENANT_ISOLATION=True

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------

# API rate limiting (requests per minute)
API_RATE_LIMIT=100/minute

# API version
API_VERSION=v1

# Enable API documentation (Swagger/OpenAPI)
ENABLE_API_DOCS=True
